generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./todo.db"
}

model Usuario {
  id      Int      @id @default(autoincrement())
  nome    String
  email   String   @unique
  tarefas Tarefa[] @relation("UsuarioTarefas")
}

model Tarefa {
  id         Int       @id @default(autoincrement())
  titulo     String
  descricao  String?
  status     String    @default("PENDENTE")
  dataLimite DateTime?
  usuarioId  Int
  usuario    Usuario   @relation("UsuarioTarefas", fields: [usuarioId], references: [id])

  @@index([usuarioId])
}
